<%= form_for @post, :html => {class: 'my-5 py-5'} do |f| %>
  <h3>Create New Post</h3>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group row">
        <div class="col-md-12">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Post Title' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-12">
          <%= f.text_area :content, class: 'form-control', placeholder: 'Enter Post Content', rows: '3' %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="form-group row">
        <div class="col-sm-10">
          <div class="card">
            <div class="card-body">
              <p>Post Published: 1st march 2019</p>
              <p class="mb-0">Post last Modified: 1st march 2019</p>
            </div>
            <div class="card-footer">
              <%= f.submit :Publish, class: 'btn btn-outline-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>