<div class="row py-5">
  <div class="col-md-12">
    
    <% @posts.each do |post| %>
    <article class="bg-white mb-2">
      <div class="row">
        <div class="col-md-3">
          <img src="https://placeimg.com/640/480/any" class="img-fluid">
        </div>
        <div class="col-md-9">
          <div class="p-3">
            <header>
              <h4 class="article_title font-weight-bold">
                <%= link_to post.title, post_path(post) %>
              </h4>
            </header>
            <div class="content">
              <%= truncate sanitize(post.content, tags: [], attributes: []), length: 150 %>
            </div>
            <footer class="mt-5">
              <span class="text-muted">
                Published at - 
                <%= post.created_at.strftime('%b %e, %l:%M %p') %>
              </span>
              <span class="text-muted">
                By - Sm Ehsan
              </span>
            </footer>
          </div>
        </div>
      </div>
    </article>
    <% end %>
  </div>
</div>